/*This program will didplay a happy and sad face alternating on the LCD screen*/

#include <LiquidCrystal.h>
LiquidCrystal lcd (8, 9, 4, 5, 6, 7);

byte smile [8] = {B01010,
                  B01010,
                  B01010,
                  B00000,
                  B00100,
                  B10001,
                  B01110,
                  B00000,
                 };

byte frown [8] = {B01010,
                  B01010,
                  B00000,
                  B00100,
                  B00000,
                  B01110,
                  B10001,
                 };


void setup()
{
  // put your setup code here, to run once:
  lcd.begin(16, 2);
  lcd.createChar (0, smile);
  lcd.createChar (1, frown);
  // lcd.setCursor (0, 1);
}

void loop()
{
  // put your main code here, to run repeatedly:
  // lcd.write(byte(0));
  int row = 0;
  int col = 0;
  for (row = 0; row < 2; row++)
  {
    for (col = 0; col < 16; col = col + 2)
    {
      lcd.setCursor (col, row);
      lcd.write(byte(0));
    }
  }
  for (row = 0; row < 2; row++)
  {
    for (col = 1; col < 16; col = col + 2)
    {
      lcd.setCursor (col, row);
      lcd.write(byte(1));
    }
  }
}
